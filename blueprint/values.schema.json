{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": true,
    "properties": {
      "appName": {
        "default": "multi-tier-app",
        "description": "Default values for multi-tier-app",
        "title": "appName",
        "type": "string"
      },
      "backend": {
        "additionalProperties": true,
        "properties": {
          "image": {
            "default": "springcommunity/spring-boot-mongo-jwt-auth:latest",
            "title": "image",
            "type": "string"
          },
          "port": {
            "default": 8080,
            "title": "port",
            "type": "integer"
          },
          "replicas": {
            "default": 1,
            "title": "replicas",
            "type": "integer"
          }
        },
        "required": [
          "image",
          "port",
          "replicas"
        ],
        "title": "backend",
        "type": "object"
      },
      "cloudnativepg": {
        "additionalProperties": true,
        "properties": {
          "clusterName": {
            "default": "my-cnpg-cluster",
            "title": "clusterName",
            "type": "string"
          },
          "databaseName": {
            "default": "appdb",
            "title": "databaseName",
            "type": "string"
          },
          "enabled": {
            "default": true,
            "title": "enabled",
            "type": "boolean"
          },
          "instances": {
            "default": 3,
            "title": "instances",
            "type": "integer"
          },
          "storageSize": {
            "default": "1Gi",
            "title": "storageSize",
            "type": "string"
          },
          "user": {
            "default": "appuser",
            "title": "user",
            "type": "string"
          }
        },
        "required": [
          "enabled",
          "clusterName",
          "instances",
          "storageSize",
          "databaseName",
          "user"
        ],
        "title": "cloudnativepg",
        "type": "object"
      },
      "frontend": {
        "additionalProperties": true,
        "properties": {
          "image": {
            "default": "nginx:latest",
            "title": "image",
            "type": "string"
          },
          "port": {
            "default": 80,
            "title": "port",
            "type": "integer"
          },
          "replicas": {
            "default": 1,
            "title": "replicas",
            "type": "integer"
          }
        },
        "required": [
          "image",
          "port",
          "replicas"
        ],
        "title": "frontend",
        "type": "object"
      },
      "hazelcast": {
        "additionalProperties": true,
        "properties": {
          "clusterName": {
            "default": "my-hazelcast-cluster",
            "title": "clusterName",
            "type": "string"
          },
          "clusterSize": {
            "default": 3,
            "title": "clusterSize",
            "type": "integer"
          },
          "enabled": {
            "default": true,
            "title": "enabled",
            "type": "boolean"
          }
        },
        "required": [
          "enabled",
          "clusterName",
          "clusterSize"
        ],
        "title": "hazelcast",
        "type": "object"
      },
      "kafka": {
        "additionalProperties": true,
        "properties": {
          "bootstrapServers": {
            "default": "my-kafka-cluster-kafka-bootstrap:9092",
            "title": "bootstrapServers",
            "type": "string"
          },
          "enabled": {
            "default": true,
            "title": "enabled",
            "type": "boolean"
          },
          "partitions": {
            "default": 3,
            "title": "partitions",
            "type": "integer"
          },
          "replicas": {
            "default": 1,
            "title": "replicas",
            "type": "integer"
          },
          "topicName": {
            "default": "my-topic",
            "title": "topicName",
            "type": "string"
          }
        },
        "required": [
          "enabled",
          "topicName",
          "partitions",
          "replicas",
          "bootstrapServers"
        ],
        "title": "kafka",
        "type": "object"
      },
      "mongodb_operator": {
        "additionalProperties": true,
        "properties": {
          "clusterName": {
            "default": "my-mongo-cluster",
            "title": "clusterName",
            "type": "string"
          },
          "enabled": {
            "default": true,
            "description": "Deploys a MongoDB cluster using the official MongoDB Community Operator",
            "title": "enabled",
            "type": "boolean"
          },
          "password": {
            "default": "",
            "title": "password",
            "type": "string"
          },
          "passwordSecretName": {
            "default": "my-mongo-user-password",
            "title": "passwordSecretName",
            "type": "string"
          },
          "replicas": {
            "default": 3,
            "title": "replicas",
            "type": "integer"
          },
          "storageSize": {
            "default": "2Gi",
            "title": "storageSize",
            "type": "string"
          },
          "username": {
            "default": "my-mongo-user",
            "title": "username",
            "type": "string"
          },
          "version": {
            "default": "6.0",
            "title": "version",
            "type": "string"
          }
        },
        "required": [
          "enabled",
          "clusterName",
          "replicas",
          "version",
          "storageSize",
          "username",
          "passwordSecretName",
          "password"
        ],
        "title": "mongodb_operator",
        "type": "object"
      }
    },
    "required": [
      "appName",
      "frontend",
      "backend",
      "kafka",
      "hazelcast",
      "mongodb_operator",
      "cloudnativepg"
    ],
    "type": "object"
}